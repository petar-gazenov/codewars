function i(word) {
  let b = 'i';
  let iWord = word.toLowerCase();
  
  if (word === '' || iWord[0] === b) {
  return 'Invalid word';
  } else {
  let fullVowel = b + word;
  let vCount = fullVowel.match(/[aeiou]/gi).length;
  let cCount = fullVowel.match(/[bcdfghjklmnpqrstwxz]/gi).length;
